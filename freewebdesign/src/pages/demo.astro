---
import { Image } from "astro:assets"
import profile from "@img/profile.png"
import Layout from "../layouts/Layout.astro"
import Form from "@components/Form.astro"
---

<Layout title="Agency date">
	<main class="absolute w-full flex justify-center h-full items-center align-middle">
		<div
			class="w-[1024px] h-[560px] grid grid-cols-8 grid-rows-1 gap-0 shadow-xl rounded-lg border-[1px]"
		>
			<section class="flex flex-col gap-6 border-r-2 p-10 pr-4 col-span-3">
				<a href="/" target="_parent" class="w-max flex flex-row items-center justify-center gap-2 text-slate-500 tracking-wide">
					<div
						class="border-2 w-max p-1 rounded-full hover:border-transparent cursor-pointer hover:bg-[#4839b923]"
					>
						<svg
							class="fill-[#4739b9]"
							width="36"
							height="36"
							viewBox="0 0 24 24"
							><path
								d="m7.85 13l2.85 2.85q.3.3.288.7t-.288.7q-.3.3-.712.313t-.713-.288L4.7 12.7q-.3-.3-.3-.7t.3-.7l4.575-4.575q.3-.3.713-.287t.712.312q.275.3.288.7t-.288.7L7.85 11H19q.425 0 .713.288T20 12q0 .425-.288.713T19 13z"
							></path></svg
						>
					</div>
					Volver
				</a>
				<figure class="flex flex-col gap-2">
					<Image src={profile} alt="Profile" loading="eager" class="w-20 h-20 rounded-full" />

					<figcaption class="flex flex-col gap-1">
						<h2 class="font-medium text-slate-500">Eduardo Lop√©z</h2>
						<h3 class="font-black text-xl tracking-wide">
							15 Minutos con Eduardo Project Manager
						</h3>
					</figcaption>
				</figure>
				<div
					class="flex flex-col text-zinc-600 fill-zinc-600 gap-4 stroke-zinc-600"
				>
					<span class="flex fle-row gap-2"
						><svg width="24" height="24" viewBox="0 0 24 24"
							><path
								d="M12 20c4.4 0 8-3.6 8-8s-3.6-8-8-8s-8 3.6-8 8s3.6 8 8 8m0-18c5.5 0 10 4.5 10 10s-4.5 10-10 10S2 17.5 2 12S6.5 2 12 2m5 11.9l-.7 1.3l-5.3-2.9V7h1.5v4.4z"
							></path></svg
						>15 min</span
					>
					<span class="flex fle-row gap-2">
						<svg width="24" height="24" viewBox="0 0 48 48"
							><g fill="none" stroke-width="4"
								><path
									d="M24 44C35.0457 44 44 35.0457 44 24C44 12.9543 35.0457 4 24 4C12.9543 4 4 12.9543 4 24C4 35.0457 12.9543 44 24 44Z"
								></path><path
									d="M4 20.8404C7.01485 19.4168 9.24466 19.2185 10.6894 20.2454C12.8566 21.7859 13.1283 28.064 18.0575 25.0635C22.9867 22.063 15.9467 20.8404 17.475 16.4939C19.0033 12.1474 24.0083 15.5237 24.5059 10.7627C24.8375 7.58862 21.0408 6.37413 13.1156 7.11921"
								></path><path
									stroke-linecap="round"
									d="M36.0001 8C30.2857 12.9886 28.2899 16.0011 30.0127 17.0373C32.5968 18.5917 33.6933 16.4033 36.8467 17.0373C40.0001 17.6714 39.3173 21.9457 37.6587 21.9457C36.0001 21.9457 27.41 20.8518 27.8427 25.865C28.2753 30.8781 33.4422 31.6203 33.4422 34.4211C33.4422 36.2883 32.299 39.146 30.0127 42.9942"
								></path><path
									stroke-linecap="round"
									d="M6.10449 32.9264C7.01598 32.5288 7.70115 32.2374 8.15999 32.052C12.0071 30.4978 14.8617 30.1314 16.7236 30.953C20.0161 32.4059 18.7503 35.3401 19.7816 36.4211C20.8128 37.5021 23.388 37.1876 23.388 39.244C23.388 40.615 22.9275 42.1637 22.0065 43.8901"
								></path></g
							></svg
						>
						Central European Time
					</span>
				</div>
			</section>
			<section class="rounded-xl col-span-5 px-6 py-4 flex flex-col gap-6">
				<Form />
			</section>
		</div>
	</main>
</Layout>
